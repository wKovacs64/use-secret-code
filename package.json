{
  "name": "use-secret-code",
  "version": "0.0.0-semantically-released",
  "description": "Custom hook for adding cheat codes to your React app",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "secret",
    "cheat",
    "code"
  ],
  "license": "MIT",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-secret-code.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-secret-code/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "example:install": "npm --workspace=example install",
    "example:build": "npm --workspace=example run build",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "husky:install": "husky install",
    "prepare": "run-s --silent husky:install build",
    "postinstall": "patch-package",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@xstate/react": "3.0.0",
    "xstate": "4.32.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@testing-library/dom": "8.16.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "14.4.2",
    "@types/node": "17.0.12",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@wkovacs64/prettier-config": "3.0.2",
    "c8": "7.12.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.21.0",
    "eslint-plugin-wkovacs64": "13.15.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "semantic-release": "19.0.3",
    "tsup": "6.2.1",
    "typescript": "4.7.4",
    "vitest": "0.20.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "workspaces": [
    "example"
  ]
}
