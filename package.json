{
  "name": "use-secret-code",
  "version": "0.0.0-semantically-released",
  "description": "Custom hook for adding cheat codes to your React app",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "secret",
    "cheat",
    "code"
  ],
  "license": "MIT",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-secret-code.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-secret-code/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cm": "git-cz",
    "format": "prettier --write .",
    "build": "tsup ./src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "example:install": "npm --workspace=example install",
    "example:build": "npm --workspace=example run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" .",
    "husky:install": "husky install",
    "prepare": "npm-run-all --silent husky:install build",
    "postinstall": "patch-package"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@xstate/react": "3.0.0",
    "xstate": "4.31.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@testing-library/dom": "8.13.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "14.1.0",
    "@types/node": "17.0.12",
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.15",
    "@wkovacs64/prettier-config": "3.0.1",
    "c8": "7.11.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.13.0",
    "eslint-plugin-wkovacs64": "13.13.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-release": "19.0.2",
    "tsup": "5.12.5",
    "typescript": "4.6.3",
    "vitest": "0.9.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "workspaces": [
    "example"
  ]
}
