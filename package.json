{
  "name": "use-secret-code",
  "version": "1.0.81",
  "description": "Custom hook for adding cheat codes to your React app",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "secret",
    "cheat",
    "code"
  ],
  "license": "MIT",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-secret-code.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-secret-code/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only",
    "changeset:publish": "changeset publish",
    "example:install": "npm --workspace=example install",
    "example:build": "npm --workspace=example run build",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "prepare": "npm run --silent build",
    "postinstall": "patch-package",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@xstate/react": "3.2.2",
    "xstate": "4.38.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@testing-library/dom": "9.3.1",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.17.1",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "@vitest/coverage-v8": "0.33.0",
    "@wkovacs64/prettier-config": "3.0.3",
    "eslint": "8.46.0",
    "eslint-plugin-wkovacs64": "15.0.1",
    "npm-run-all": "4.1.5",
    "patch-package": "7.0.2",
    "prettier": "3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "7.1.0",
    "typescript": "5.1.6",
    "vite": "4.4.8",
    "vitest": "0.33.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "workspaces": [
    ".",
    "example"
  ]
}
