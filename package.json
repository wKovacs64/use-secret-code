{
  "name": "use-secret-code",
  "version": "0.0.0-semantically-released",
  "description": "Custom hook for adding cheat codes to your React app",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "secret",
    "cheat",
    "code"
  ],
  "license": "MIT",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-secret-code.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-secret-code/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cm": "git-cz",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,json,md,mdx,yml,yaml}\"",
    "build": "tsup ./src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --onlyChanged",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" .",
    "husky:install": "husky install",
    "prepare": "npm-run-all --silent husky:install build"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@xstate/react": "1.6.3",
    "xstate": "4.27.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@babel/preset-env": "7.16.7",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "16.0.0",
    "@testing-library/dom": "8.11.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@wkovacs64/prettier-config": "3.0.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.6.0",
    "eslint-plugin-wkovacs64": "13.8.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.6",
    "npm-run-all": "4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-release": "18.0.1",
    "tsup": "5.11.10",
    "typescript": "4.5.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
