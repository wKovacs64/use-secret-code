{
  "name": "use-secret-code",
  "version": "1.0.79",
  "description": "Custom hook for adding cheat codes to your React app",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "secret",
    "cheat",
    "code"
  ],
  "license": "MIT",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-secret-code.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-secret-code/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only",
    "changeset:publish": "changeset publish",
    "example:install": "npm --workspace=example install",
    "example:build": "npm --workspace=example run build",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "husky:install": "husky install",
    "prepare": "run-s --silent husky:install build",
    "postinstall": "patch-package",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@xstate/react": "3.0.1",
    "xstate": "4.34.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.2",
    "@testing-library/dom": "8.19.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.11.9",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@vitest/coverage-c8": "0.24.5",
    "@wkovacs64/prettier-config": "3.0.2",
    "c8": "7.12.0",
    "codecov": "3.8.3",
    "eslint": "8.26.0",
    "eslint-plugin-wkovacs64": "13.17.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "patch-package": "6.5.0",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "6.3.0",
    "typescript": "4.8.4",
    "vite": "3.2.2",
    "vitest": "0.24.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "workspaces": [
    ".",
    "example"
  ]
}
